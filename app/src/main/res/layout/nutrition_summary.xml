<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sophia.cst2335_final_group_project.Food_Nutrition_Tracker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalCallastday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/totalCalYd" />

        <TextView
            android:id="@+id/totalCalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/calAvg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calAvg" />

        <ListView
            android:id="@+id/nutritionListSum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
